@model List<(webCore.Models.Message, string, string)>
@{
    ViewData["Title"] = "Customer Service Chat";
}

<style>
    .profile-image {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        object-fit: cover;
        float: left;
        margin-right: 10px;
    }

    .message-cell {
        vertical-align: middle;
        padding: 10px;
        cursor: pointer; 
    }

    .username {
        display: inline-block;
        height: 50px;
        line-height: 50px;
    }

    .center-table {
        margin: 0 auto;
    }

    .center-text {
        text-align: center;
        background-color: lightblue;
        color: white;
    }
</style>

<table class="table center-table" style="width: 100%;">
    
    <tbody>
        @foreach (var messagesWithUserData in Model)
        {
                <tr>
                    <td class="message-cell" onclick="location.href='@Url.Action("Chat",  new { userId = messagesWithUserData.Item1.UserID })'">
                        <img src="@messagesWithUserData.Item3" alt="Profile Image" class="profile-image" />
                        <span class="username">@messagesWithUserData.Item2</span>
                    </td>
                </tr>
        }
    </tbody>
</table>

